<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Outlets">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_margin="20dp"
                android:textStyle="italic"
                android:textSize="28sp"
                android:textColor="#000"
                android:text="DV BITES VENTURES"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:scaleType="centerCrop"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/ciVinay"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ravi">
                    </com.mikhaellopez.circularimageview.CircularImageView>

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Hilton China"

                        android:textColor="#000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/tvPosition"
                        android:textSize="18sp"
                        android:textColor="#FF00"
                        android:layout_alignLeft="@+id/tvName"
                        android:text="Desi Haat Warasiya"
                        android:layout_margin="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_alignStart="@+id/tvName"
                        android:text="Contact: +917043614334"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tvPosition"
                        android:id="@+id/tvContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:scaleType="centerInside"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/ciDinesh"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/waves">
                    </com.mikhaellopez.circularimageview.CircularImageView>

                    <TextView
                        android:id="@+id/tdName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Hilton Waves"

                        android:textColor="#000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/tdPosition"
                        android:textSize="18sp"
                        android:textColor="#FF00"
                        android:layout_alignLeft="@+id/tdName"
                        android:text="Desi Haat Warasiya"
                        android:layout_margin="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tdName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_alignStart="@+id/tdName"
                        android:text="Contact: +917043614334"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tdPosition"
                        android:id="@+id/tdContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:scaleType="centerInside"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/ciRavi"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/hiltondarbar">
                    </com.mikhaellopez.circularimageview.CircularImageView>

                    <TextView
                        android:id="@+id/trName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Hilton Darbar"
                        android:textColor="#000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/trPosition"
                        android:textSize="20sp"
                        android:textColor="#FF00"
                        android:text="Inorbit Mall"
                        android:layout_margin="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/trName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_alignStart="@+id/trName"
                        android:text="Contact: +917043614334"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/trPosition"
                        android:id="@+id/trContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:scaleType="centerInside"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/ciEva"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ravi">
                    </com.mikhaellopez.circularimageview.CircularImageView>

                    <TextView
                        android:id="@+id/teName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Hilton China"
                        android:textColor="#000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/tePosition"
                        android:textSize="20sp"
                        android:textColor="#FF00"
                        android:text="Eva Mall"
                        android:layout_margin="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/teName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_alignStart="@+id/teName"
                        android:text="Contact: +917043614334"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tePosition"
                        android:id="@+id/teContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>

