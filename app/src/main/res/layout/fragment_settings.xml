<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ravi.hiltonadmin.SettingsFragment">

   <LinearLayout
       android:id="@+id/lHeader_Settings"
       android:background="@color/colorPrimary"
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_height="125dp">
       <ImageView
           android:layout_weight="2"
           android:src="@drawable/user_image"
           android:layout_width="match_parent"
           android:layout_height="match_parent" />
       <LinearLayout
           android:paddingLeft="10dp"
           android:paddingBottom="5dp"
           android:layout_weight="1"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:id="@+id/tUsername_Settings"
               android:layout_marginTop="10dp"
               android:textColor="#000"
               android:textSize="18dp"
               android:text="USERNAME: james"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tEmail_Settings"
                android:textSize="18dp"
                android:textColor="#000"
                android:text="EMAIL: emailAddress@gmail.com "
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/tPhone_Settings"
               android:textSize="18dp"
               android:textColor="#000"
               android:text="PHONE: 7043614334 "
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </LinearLayout>


   </LinearLayout>



    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/lHeader_Settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_below="@id/lHeader_Settings"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                android:clickable="true"
                android:id="@+id/cdChangeUserDetails"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:layout_gravity="left"
                    android:text="Change User Details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_arrow_forward_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cdOutlets"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clickable="true"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:layout_gravity="left"
                    android:text="Our Outlets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_arrow_forward_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cdAboutUs"
                android:layout_margin="10dp"
                android:clickable="true"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#000"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:layout_gravity="left"
                    android:text="About Us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_arrow_forward_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cdHiltonBucks"
                android:layout_margin="10dp"
                android:clickable="true"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#000"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:layout_gravity="left"
                    android:text="Hilton Bucks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_arrow_forward_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:clickable="true"
                android:id="@+id/cdSignout"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#FF0000"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:layout_gravity="left"
                    android:text="Sign Out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_arrow_forward_red_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>




        </LinearLayout>




</ScrollView>

</RelativeLayout>
